{
  "info": {
    "name": "LedgerPay Backend API",
    "description": "Comprehensive API collection for LedgerPay microservices",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "tenantId",
      "value": "22222222-2222-2222-2222-222222222222",
      "type": "string"
    },
    {
      "key": "accountId",
      "value": "2a000001-aaaa-aaaa-aaaa-aaaaaaaa0001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "username",
                  "value": "admin",
                  "type": "text"
                },
                {
                  "key": "tenantId",
                  "value": "{{tenantId}}",
                  "type": "text"
                },
                {
                  "key": "role",
                  "value": "ADMIN",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}:8090/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "port": "8090",
              "path": ["api", "v1", "auth", "login"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', responseJson.accessToken);",
                  "    console.log('Token saved:', responseJson.accessToken.substring(0, 50) + '...');",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Accounts Service",
      "item": [
        {
          "name": "List Accounts",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "X-Tenant-Id",
                "value": "{{tenantId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}:8081/api/v1/accounts",
              "host": ["{{baseUrl}}"],
              "port": "8081",
              "path": ["api", "v1", "accounts"]
            }
          }
        },
        {
          "name": "Get Account by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "X-Tenant-Id",
                "value": "{{tenantId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}:8081/api/v1/accounts/{{accountId}}",
              "host": ["{{baseUrl}}"],
              "port": "8081",
              "path": ["api", "v1", "accounts", "{{accountId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Posting Service",
      "item": [
        {
          "name": "Create Transaction",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "X-Tenant-Id",
                "value": "{{tenantId}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenantId\": \"{{tenantId}}\",\n  \"reference\": \"TEST-TX-{{$timestamp}}\",\n  \"timestamp\": \"{{$isoTimestamp}}\",\n  \"lines\": [\n    {\n      \"accountId\": \"2a000001-aaaa-aaaa-aaaa-aaaaaaaa0001\",\n      \"debit\": 100.00,\n      \"credit\": 0.00,\n      \"memo\": \"Test transaction debit\"\n    },\n    {\n      \"accountId\": \"2b000001-bbbb-bbbb-bbbb-bbbbbbbb0001\",\n      \"debit\": 0.00,\n      \"credit\": 100.00,\n      \"memo\": \"Test transaction credit\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}:8082/api/v1/transactions",
              "host": ["{{baseUrl}}"],
              "port": "8082",
              "path": ["api", "v1", "transactions"]
            }
          }
        },
        {
          "name": "Get Internal Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "X-Tenant-Id",
                "value": "{{tenantId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}:8082/api/v1/internal/balance?accountId={{accountId}}",
              "host": ["{{baseUrl}}"],
              "port": "8082",
              "path": ["api", "v1", "internal", "balance"],
              "query": [
                {
                  "key": "accountId",
                  "value": "{{accountId}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Query Service",
      "item": [
        {
          "name": "Get Account Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "X-Tenant-Id",
                "value": "{{tenantId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}:8083/api/v1/accounts/{{accountId}}/balance",
              "host": ["{{baseUrl}}"],
              "port": "8083",
              "path": ["api", "v1", "accounts", "{{accountId}}", "balance"]
            }
          }
        }
      ]
    },
    {
      "name": "Audit Service",
      "item": [
        {
          "name": "Get Audit Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "X-Tenant-Id",
                "value": "{{tenantId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}:8084/api/v1/audit?tenantId={{tenantId}}&page=0&size=10",
              "host": ["{{baseUrl}}"],
              "port": "8084",
              "path": ["api", "v1", "audit"],
              "query": [
                {
                  "key": "tenantId",
                  "value": "{{tenantId}}"
                },
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Create Audit Log",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "X-Tenant-Id",
                "value": "{{tenantId}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenantId\": \"{{tenantId}}\",\n  \"action\": \"TEST_ACTION\",\n  \"entityType\": \"TEST_ENTITY\",\n  \"entityId\": \"TEST-{{$timestamp}}\",\n  \"actor\": \"admin\",\n  \"details\": \"Test audit log creation\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}:8084/api/v1/audit",
              "host": ["{{baseUrl}}"],
              "port": "8084",
              "path": ["api", "v1", "audit"]
            }
          }
        }
      ]
    }
  ]
}
